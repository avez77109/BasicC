// Online C compiler to run C program online
#include <stdio.h>

int main() 
{   
    printf("****WELCOME TO AIARKP CALCULATOR****\n");
    int a,b,opt;
    printf("enter a=");
    scanf("%d" ,&a);
    printf("enter b=");
    scanf("%d" , &b);
    printf("^^^^^^\n");
    printf("select any opt \n 1 for addition \n 2 for substraction \n 3 for multiplication \n 4 for divide\n^^^^^^^^\nEnter option:");
    scanf("%d" , &opt);
    switch (opt)
    {
        case 1 : printf("add is %d\n" , a+b);break;
        case 2 : printf("sub is %d\n" , a-b);break;
        case 3 : printf("multiply is %d\n" , a*b);break;
        case 4 : printf("divide is %d\n" , a/b);break;
        default : printf("enter valid number");break;
    }
    printf("thank you\ncome again");
    
    return 0;
}
