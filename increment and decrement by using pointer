#include <stdio.h>

int main() {
 int a=15;
 int *ptr=&a;

 printf("initial value of ptr=%u\n",ptr);
 printf("------------\n");
 ptr++;
 printf("after increment the value is=%u\n",ptr);
 printf("------------\n");
 ptr--;
 printf("after decrement the value is=%u\n",ptr);
 printf("------------\n"); 
 ptr+1;
 printf("after adding the value is=%u\n",ptr+1);
 printf("------------\n");
 ptr-1;
  printf("after substracting the value is=%u\n",ptr);
}
